<odoo>

    <!-- TREE (LIST) VIEW -->
    <record id="view_library_transaction_tree" model="ir.ui.view">
        <field name="name">library.transaction.list</field>
        <field name="model">library.transaction</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Library Transactions" decoration-danger="is_overdue">
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="book_copy_id"/>
                <field name="borrow_date"/>
                <field name="expected_return_date"/>
                <field name="return_date"/>
                <field name="status"/>
                <field name="late_days"/>
                <field name="fine_amount"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_library_transaction_form" model="ir.ui.view">
        <field name="name">library.transaction.form</field>
        <field name="model">library.transaction</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Library Transaction">

                <header>

                    <!-- Nút không còn dùng states nữa trong Odoo 17+ -->
                    <button name="action_mark_borrowed"
                            string="Mark as Borrowed"
                            type="object"
                            modifiers='{"invisible": [["status","=","borrowed"]]}'
                    />

                    <button name="action_mark_late"
                            string="Mark as Late"
                            type="object"
                            modifiers='{"invisible": [["status","!=","borrowed"]]}'
                    />

                    <button name="action_mark_returned"
                            string="Mark as Returned"
                            type="object"
                            modifiers='{"invisible": [["status","=","returned"]]}'
                    />

                    <field name="status"
                           widget="statusbar"
                           statusbar_visible="borrowed,late,returned"
                    />
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="member_id"/>
                            <field name="book_copy_id"/>
                            <field name="book_id" readonly="1"/>

                            <field name="borrow_date"/>
                            <field name="expected_return_date"/>

                            <field name="return_date"
                                   modifiers='{"readonly":[["status","!=","returned"]]}'
                            />
                        </group>

                        <group>
                            <field name="status"/>
                            <field name="is_overdue" readonly="1"/>
                            <field name="late_days" readonly="1"/>

                            <field name="fine_amount"
                                   modifiers='{"readonly":[["late_days","=",0]]}'
                            />

                            <field name="fine_record_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_library_transaction" model="ir.actions.act_window">
        <field name="name">Transaction</field>
        <field name="res_model">library.transaction</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
